<!doctype html>
<html>
<head>
    <title>Book Store</title>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>

<body  style="background-color:#9c9f84;">
    <%= render :partial => "login/loginSuccessHeader" %>
    
    <div class="row">
        <div class="col-md-offset-7 col-md-2">
            <form action="/welcome/new" link="GET" name="newIssue" id="newIssueform">
                <button type="submit">Add New Issue</button>                  
            </form>
        </div>
    </div> 

    <div class="row">
        <div class="col-md-offset-1" style="background-color:#9c9f84;"><br><br>
        <div class="panel panel-primary col-md-11" style="background-color:#D1FFD1;">
            <a><div class="row">
                <div class="col-md-1">Id : </div>
                <div class="col-md-3 ">Topic : </div>
                <div class="col-md-4 ">Description : </div>
                <div class="col-md-2 ">Up : </div>
                <div class="col-md-2 ">Down: </div>
            </div></a><br><br>
            <% @issueObjArr.each do |issueObj|%>
                <div class="row">
                    <div class="col-md-1"> <%= issueObj["id"] %>blah<%= "#{session[:user_id]}"%></div>
                    <div class="col-md-3 "><%= issueObj["topic"] %></div>
                    <div class="col-md-4 "><%= issueObj["desc"] %></div>
                    <div class="col-md-2 ">
                        <form action= <%="/welcome/#{issueObj['id']}/upvote"%> method="POST" name="upvoteIssue" id="upvoteIssueform">
                            <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-plus-sign">Up</span>
                            </button>
                            <span class="badge"><%= issueObj["upvote"] %></span>                  
                        </form>
                    </div>
                    <div class="col-md-2 ">
                        <form action= <%="/welcome/#{issueObj['id']}/downvote"%> method="POST" name="downvoteIssue" id="downIssueform">
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-minus-sign">Down</span>
                            </button>
                            <span class="badge"><%= issueObj["downvote"] %></span>                  
                        </form>
                    </div>
                </div>
                <hr>
            <% end %>
        </div>
    </div>
</body>
</html>