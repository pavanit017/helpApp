<!doctype html>
<html>
<head>
    <title>Book Store</title>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
        .validError{
            color: red;
        }
        input[type=checkbox] + label{font-weight: 300;}
        body{
            margin-top: 40px !important;
        }
        .app-modal-window .modal-dialog {
            width: 90%;
        }
        .pagination{
            margin: 5px 0;
        }
        .margin-v-sm{
            margin: 10px 0;
        }
        .margin-h-sm{
            margin:0 10px;
        }
        a:hover {
            cursor:pointer;
        }
        .padding-none{
            padding:0;
        }


        .level0{
            text-indent : 0px;
            color : #428bca;
        }
        .level1{
            text-indent : 20px;
            color : #428bca;
        }
        .level2{
            text-indent : 40px;
            color : #428bca;
        }
        .level3{
            text-indent : 60px;
            color : #428bca;
        }
        .level4{
            text-indent : 80px;
            color : #428bca;
        }
        .level5{
            text-indent : 100px;
            color : #428bca;
        }
        .level6{
            text-indent : 120px;
            color : #428bca;
        }
        .hasDropdown{
            color : #428bca ;
        }
        .noDropdown{
            color : #000000;
        }

        div.tooltip-inner {
            text-align: center;
            -webkit-border-radius: 0px;
            -moz-border-radius: 0px;
            border-radius: 0px;
            margin-bottom: 6px;
            background-color: #505050;
            font-size: 14px;
        }
    </style>
</head>

<body  style="background-color:#9c9f84;">
    <div class="row">
        <div class=" col-md-4 col-md-offset-5">
            <font size="8" color="black">Help App</font>
        </div>
    </div><br>
    <div class="row">
        <div class="col-md-offset-7 col-md-2">
            <form action="/welcome/new" link="GET" name="newIssue" id="newIssueform">
                <button type="submit">Add New Issue</button>                  
            </form>
        </div>
    </div> 

    <div class="row">
        <div class="col-md-offset-1" style="background-color:#9c9f84;"><br><br>
        <div class="panel panel-primary col-md-11" style="background-color:#D1FFD1;">
            <a><div class="row">
                <div class="col-md-1">Id : </div>
                <div class="col-md-3 ">Topic : </div>
                <div class="col-md-4 ">Description : </div>
                <div class="col-md-2 ">Up : </div>
                <div class="col-md-2 ">Down: </div>
            </div></a><br><br>
            <% @issueObjArr.each do |issueObj|%>
                <div class="row">
                    <div class="col-md-1"> <%= issueObj["id"] %></div>
                    <div class="col-md-3 "><%= issueObj["topic"] %></div>
                    <div class="col-md-4 "><%= issueObj["desc"] %></div>
                    <div class="col-md-2 ">
                        <form action= <%="/welcome/#{issueObj['id']}/upvote"%> method="POST" name="upvoteIssue" id="upvoteIssueform">
                            <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-plus-sign">Up</span>
                            </button>
                            <span class="badge"><%= issueObj["upvote"] %></span>                  
                        </form>
                    </div>
                    <div class="col-md-2 ">
                        <form action= <%="/welcome/#{issueObj['id']}/downvote"%> method="POST" name="downvoteIssue" id="downIssueform">
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-minus-sign">Down</span>
                            </button>
                            <span class="badge"><%= issueObj["downvote"] %></span>                  
                        </form>
                    </div>
                </div>
                <hr>
            <% end %>
        </div>
    </div>
</body>
</html>